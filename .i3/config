## Custom Keybinds
# Tools used in these binds:
# xinput, scrot, pactl, xbacklight, playerctl, feh(exec_always)

# swap keyboard input layout
#
bindsym $mod+i exec setxkbmap -model pc105 -layout us -variant intl
bindsym $mod+Shift+i exec setxkbmap -model pc105 -layout us

# Next workspace
bindsym Ctrl+Mod1+Right workspace next
# Previous workspace
bindsym Ctrl+Mod1+Left workspace prev

# Move to next workspace
bindsym Ctrl+Mod1+Shift+Right move container to workspace next

# Move to previous workspace
bindsym Ctrl+Mod1+Shift+Left move container to workspace prev

# Enable Laptop Keyboard
#bindsym $mod+Mod1+k exec --no-startup-id xinput --set-prop "AT Translated Set 2 keyboard" "Device Enabled" 1
# Disable Laptop Keyboard
#bindsym $mod+Shift+Mod1+k exec --no-startup-id xinput --set-prop "AT Translated Set 2 keyboard" "Device Enabled" 0

# Scrot focused and upload
bindsym Print exec --no-startup-id scrot '%Y-%m-%d_%H-%M_scrot.png' --focused --exec 'Scripts/downPomf.sh $f | xclip -selection clipboard && mv $f ~/shots/'

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -- -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# use rofi instead of dmenu
exec compton -f
# switch for multi-monitor
bindsym $mod+d exec "rofi -combi-modi drun,run -show combi -lines 7 -eh 1 -width 100 -padding 200 -color-normal '$inactive-bg-color,$text-color,$inactive-bg-color,$bg-color,$text-color' -color-window '#BB0B2846,#BB0B2846' -bw 0 -font 'SFNS Display Regular 18'"
#bindsym $mod+d exec "rofi -combi-modi drun,run -show combi -lines 7 -eh 1 -width 100 -padding 485 -color-normal '$inactive-bg-color,$text-color,$inactive-bg-color,$bg-color,$text-color' -color-window '#BB0B2846,#BB0B2846' -bw 0 -font 'SFNS Display Regular 18'"

